<% provide(:title, "Register") %>
<div class="page-header">
  <% if session["devise.user_attributes"] && session["devise.user_attributes"]["provider"] %>
    <h2>Finish <%= session["devise.user_attributes"]["provider"].capitalize %> Registration</h2>
  <% elsif params[:guest] %>
    <h2>Complete Account Registration</h2>
  <% else %>
    <h2>Register New Account</h2>
  <% end %>
</div>

<div class="row">
  <% if params[:guest] %>
    <div class="span12">
      Hey, you're logged in as a guest! You should consider making a full account. Full accounts are more secure and are essential for taking advantage of all that PayWithMe has to offer.
    </div>
  <% end %>
  <div class="span7">
    <h3>Register With Email</h3>
    <div class="well">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="control-group">
          <%= f.label :name, class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, class: "input-block-level", placeholder: "First and Last Name" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, class: 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, class: "input-block-level", placeholder: "email@example.com" %>
          </div>
        </div>

        <% if f.object.password_required? %>
          <div class="control-group">
            <%= f.label :password, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password, class: "input-block-level", placeholder: "Make it secure!" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password_confirmation, "Confirm Password", class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password_confirmation, class: "input-block-level", placeholder: "Just to be sure!" %>
            </div>
          </div>
        <% end %>

        <div class="form-actions">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="span5">
    <h3>Quick Registration</h3>
    <div class="well sidebar-nav">
      <%= link_to "Register With Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary input-block-level push-bottom" %>
      <%= link_to "Register With Twitter", user_omniauth_authorize_path(:twitter), class: "btn btn-primary input-block-level" %>
    </div>
  </div>
</div>