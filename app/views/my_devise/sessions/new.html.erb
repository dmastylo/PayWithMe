<% provide(:title, "Sign In") %>

<% content_for(:wrapper_top) do %>
  <div class="container">
    <div class="page-header">
      <h2>Sign In</h2>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="span7">
      <h3>Login With Email</h3>
      <div class="well">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
          <div class="control-group">
            <%= f.label :email, class: 'control-label' %>
            <div class="controls">
              <%= f.email_field :email, class: 'input-block-level', placeholder: 'email@example.com' %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password, class: 'input-block-level', placeholder: 'It\'s a secret!' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <label class="checkbox">
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
          <% end -%>

          <div class="form-actions">
            <%= f.submit "Sign in", class: 'btn btn-primary btn-block push-bottom-small' %>
            <%= link_to "Forgot password?", new_user_password_path, class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="span5">
      <h3>Quick Login</h3>
      <div class="well sidebar-nav">
        <%= link_to "Login With Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary input-block-level push-bottom-small" %>
        <%= link_to "Login With Twitter", user_omniauth_authorize_path(:twitter), class: "btn btn-primary input-block-level" %>
      </div>
    </div>
  </div>
</div>