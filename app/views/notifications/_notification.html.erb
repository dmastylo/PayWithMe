<% if @last_date != notification.created_at.to_date %>
  <li class="highlight"><%= notification.created_at.to_date.strftime("%B %d, %Y") %></li>
  <% @last_date = notification.created_at.to_date %>
<% end %>
<li <%= 'class="unread"'.html_safe unless notification.read? %>><%= link_to notification.body, notification.path %> <span class="timestamp"><%= distance_of_time_in_words_to_now notification.updated_at %> ago</span></li>