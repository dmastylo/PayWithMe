<% provide(:title, "Posts | Administrator Panel") %>

<% content_for(:wrapper_top) do %>
  <div class="container">
    <div class="row">
      <div class="span8">
        <h2>Administrator Panel: Posts</h2>
      </div>
      <div class="span2">
        <%= link_to "Add New Post", new_post_path, class: "btn btn-primary btn-block push-top-title" %>
      </div>
      <div class="span2">
        <%= link_to "Return to home", admin_index_path, class: "btn btn-primary btn-block push-top-title" %>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="span12">
      <table class="table table-bordered table-striped">
        <tr>
          <th>Title</th>
          <th>Created</th>
          <th>Delete</th>
        </tr>
        <%= render collection: @posts, partial: "posts/admin_post", as: :post %>
      </table>

      <%= will_paginate @posts %>
    </div>
  </div>
</div>