<tr>
  <td>
    <%= link_to affiliate.name, affiliate %>
  </td>
  <td>
    <% if affiliate.campus_rep? %>
      Campus Rep
    <% else %>
      Company
    <% end %>
  </td>
  <td>
    <%= affiliate.school unless affiliate.school.blank? %>
  </td>
  <td>
    <%= affiliate.referrals.count %>
  </td>
  <td>
    <%= affiliate.amount_of_electronic_payments %>
  </td>
  <td>
    <%= affiliate.value_of_electronic_payments %>
  </td>
  <td>
    <%= distance_of_time_in_words_to_now affiliate.created_at %> ago
  </td>
  <td>
    <%= link_to "Delete affiliate", affiliate, class: "btn btn-block btn-danger", data: { confirm: "This is irreversible, are you sure you want to delete this affiliate?" }, method: :delete %>
  </td>
</tr>