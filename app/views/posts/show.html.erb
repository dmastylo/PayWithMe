<% provide(:title, @post.title) %>

<% content_for(:wrapper_top) do %>
  <div class="container">
    <div class="row">
      <div class="span9">
        <div class="page-header">
          <h2>
            Viewing <%= @post.title %>
          </h2>
          <span class="timestamp">
            Posted <%= @post.created_at %>
          </span>
        </div>
      </div>
      <div class="span3">
        <%= link_to "View All Posts", posts_path, class: "btn btn-primary btn-block push-top-title" %>
        <% if current_user.admin %>
          <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary btn-block push-top-title-second" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="span12">
      <div class="well">
        <div class="content">
          <%= @post.content %>
        </div>
      </div>
    </div>
  </div>
</div>