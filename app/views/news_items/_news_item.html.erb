<li class="news-item <%= "unread" if !news_item.read? %>">
  <a href="<%= news_item.path %>">
    <div class="image" style="background-image: url('<%= news_item_image_path(news_item, :medium) %>');"></div>
  </a>
  
  <strong><%= link_to news_item.title, news_item.path %></strong>
  <span class="timestamp"><small><%= time_ago_in_words(news_item.updated_at) %> ago</small></span><br />

  <% news_item.subjects.each do |subject| %>
    <div class="subject" rel="tooltip" title="<%= user_name(subject) %>" data-placement="top">
      <%= profile_image_tag(subject, :small) %>
    </div>
  <% end %>

  <div class="clearfix"></div>
</li>