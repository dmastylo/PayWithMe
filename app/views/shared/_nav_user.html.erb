<li class="desktop">
  <%= link_to user_name_with_spacing(current_user), user_path(current_user), class: current_page_link(user_path(current_user)) %>
</li>
<% if current_user.wepay_account.present? %>
  <li class="desktop">
    <%= link_to humanized_money_with_symbol(current_user.wepay_account.balance), linked_account_path(current_user.wepay_account) %>
  </li>
<% end %>
<li class="dropdown desktop">
  <a href="#" class="dropdown-toggle" id="notifications-dropdown-toggle" data-toggle="dropdown">
    <i class="icon-white icon-globe"></i>
    <% if current_user.has_unread_notifications? %>
      <div class="unread-notifications-count"><%= current_user.unread_notifications.count %></div>
    <% end %>
  </a>
  <ul class="dropdown-menu notifications" id="notifications-dropdown-menu">
    <% if current_user.has_notifications? %>
      <%= render partial: "notifications/notification_nav", collection: current_user.current_notifications, as: :notification %>
      <li><%= link_to "View all notifications", notifications_path %></li>
    <% else %>
      <li><%= link_to "You have no notifications.", "#" %></li>
    <% end %>
  </ul>
</li>
<li class="dropdown desktop">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="icon-white icon-chevron-down"></i>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "Create Event", new_event_path, class: current_page_link(new_event_path) %></li>
    <li><%= link_to "My Events", events_path, class: current_page_link(events_path) %></li>
    <li><%= link_to "My Groups", groups_path, class: current_page_link(groups_path) %></li>
    <li><%= link_to "Account Settings", edit_user_registration_path, class: current_page_link(edit_user_registration_path) %></li>
    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></li>
  </ul>
</li>
<li class="mobile">
  <button type="button" class="btn btn-navbar collapsed" data-toggle="collapse" id="btn-mobile-sidebar">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
</li>