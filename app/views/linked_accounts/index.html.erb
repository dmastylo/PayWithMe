<% content_for(:before_body_end) do %>
  <script type="text/javascript">
    $(document).ready(function()
    {
      $("#btn-credit").click(function() { $("#option-paypal").show(); });
      $("#btn-paypal").click(function() { $("#option-use-paypal").show(); $("#option-use-wepay").hide(); });
      $("#btn-wepay").click(function() { $("#option-use-wepay").show(); $("#option-use-paypal").hide(); });
    });
  </script>
<% end %>