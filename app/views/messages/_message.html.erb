<li class="message <%= "new" unless @new_message.nil? %> <%= "current" if message.user == current_user %>" data-time="<%= message.created_at.to_i %>" data-oldest-time="<%= message.created_at.to_i %>" data-user="<%= message.user.id %>" id="message-<%= message.id %>">
  <div class="profile-image">
    <%= profile_image_tag message.user, :small %> 
  </div>
  <div class="body">
    <div class="user">
      <%= link_to user_name(message.user, use_you: true, length: 0), message.user %>
      <%= user_online(message.user) %>
    </div>
    <div class="timestamp">
      Posted <%= time_ago_in_words(message.created_at) %> ago.
    </div>
    <div class="content" data-count="1"><%= convert_urls_to_links(h(message.message).gsub(/\n/, '<br/>')).html_safe %></div>
  </div>
  <div class="clearfix"></div>
</li>