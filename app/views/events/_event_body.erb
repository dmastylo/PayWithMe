<div class="well">
  <h4 style="margin-top: 0;">
    <%= link_to event.title, event %>
    <% if event.public? %>
      <i class="icon-globe"></i>
    <% else %>
      <i class="icon-lock"></i>
    <% end %>
  </h4>
  <%= event.members.count %> members<br />
  <% if event.start_at < Time.now %>
    Started
  <% else %>
    Starts
  <% end %> at <%= event.start_at %>
</div>