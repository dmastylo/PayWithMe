<% provide(:title, "Your Events") %>
<div class="row">
  <div class="span9">
    <h2>Upcoming Events</h2>
  </div>
  <div class="span3">
    <% unless current_user.stub? %>
      <%= link_to "Create event", new_event_path, class: "btn btn-primary btn-block push-top-title" %>
    <% end %>
  </div>
</div>
<div class="index-partials row">
  <% if @upcoming_events.empty? %>
    <div class="span12">
      You currently don't have any upcoming events! <%= render "shared/maybe_create_event" %>
    </div>
  <% else %>
    <%= render @upcoming_events %>
  <% end %>
</div>
<div class="row">
  <div class="span12">
    <h2>Past Events</h2>
  </div>
</div>
<div class="row">
  <% if @past_events.empty? %>
    <div class="span12">
      You have not attended any events!
    </div>
  <% else %>
    <%= render @past_events, locals: { past_event: true } %>
  <% end %>
</div>
