<% provide(:title, @event.title) %>
<div class="row">
  <div class="span9">
    <div class="page-header">
      <h2><%= @event.title %></h2>
    </div>
  </div>
  <% if current_user == @event.organizer %>
    <div class="span3">
      <%= link_to "Edit event", edit_event_path(@event), class: "btn btn-primary pull-right push-top" %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="span5">
    <h3>Event Details</h3>
    <div class="well event-description">
      <% if @event.description.present? %>
        <div class="quarter"><strong>Description:</strong></div>
        <div class="three-quarters"><%= @event.description %></div>
        <div class="clearfix"></div>
      <% end %>
      <div class="quarter"><strong>Money Due:</strong></div>
      <div class="three-quarters"><%= distance_of_time_in_words_to_now @event.due_at %></div>
      <div class="clearfix"></div>
      <div class="quarter"><strong>Event Starts:</strong></div>
      <div class="three-quarters"><%= @event.start_at.to_date.strftime("%m/%d/%Y at %I:%M%p") %></div>
      <div class="clearfix"></div>
    </div>
    <h3>Guest List</h3>
    <div class="well">
      <div class="event-members">
        <% if @event.members.any? %>
          <ul class="member-list">
            <%= render @event.members %>
          </ul>
        <% else %>
          There are no members. Add some!
        <% end %>
      </div>
    </div>
  </div>
  <div class="span7">
    <h3>Message Board</h3>
    <div class="well">
      <ul class="message-list" data-id="<%= @event.id %>">
        <% if @event.messages.any? %>
            <%= render @event.messages %>
        <% else %>
          There are no messages.
        <% end %>
      </ul>
      <h4>Leave Message</h4>
      <%= form_for [@event, @event.messages.build], remote: true do |f| %>
        <%= f.text_area :message, class: "input-block-level message-text-field", rows: "3", placeholder: "Compose a message..." %>
        <%= f.submit "Post Message", class: "post-message btn btn-block" %>
      <% end %>
    </div>
  </div>
</div>