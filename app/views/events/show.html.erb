<% provide(:title, @event.title) %>
<div class="row">
    <div class="span8 offset2">
        <div class="event-title">
            <h2><%= @event.title %></h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="span5">
        <div class="well">
            <div class="event-description">
                <strong>Description</strong>: <%= @event.description %>
                <br><strong>Money Due In</strong>: <%= distance_of_time_in_words_to_now @event.due_at %>
                <br><strong>Event At</strong>: <%= @event.start_at.to_date.strftime("%m/%d/%Y %I:%M%p") %>
            </div>
        </div>
        <div class="well">
            <div class="event-members">
                <strong>Members:</strong><br>
                <% if @members.any? %>
                  <ul class="member-list-styling">
                    <%= render @members %>
                  </ul>
                <% else %>
                  There are no members. Add some!
                <% end %>
            </div>
        </div>
    </div>
    <div class="span7">
        <div class="well">
            <div class="event-chat">
                <% if @messages.any? %>
                    <div class="messages">
                        <ul class="messages-styling">
                            <%= render @messages %>
                        </ul>
                    </div>
                <% else %>
                    It's a bit empty in here...
                <% end %>
                <h3>Leave Message</h3>
                <%= form_for [@event, @event.messages.build]  do |f| %>
                    <%= f.text_area :message, class: "span5", rows: "2", placeholder: "Compose a message..." %>
                    <%= f.submit "Post", class: "btn" %>
                <% end %>
            </div>
        </div>
    </div>
</div>