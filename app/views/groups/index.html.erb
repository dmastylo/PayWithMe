<% provide(:title, "Your Groups") %>
<div class="row">
  <div class="span9">
    <div class="page-header">
      <h2>Your Groups</h2>
    </div>
  </div>
  <div class="span3">
    <% if !current_user.stub? %>
      <%= link_to "Create group", new_group_path, class: "btn btn-primary btn-block push-top-title" %>
    <% end %>
  </div>
</div>
<div class="index-partials row">
  <% if @groups.empty? %>
    You are not in any groups! Maybe you should <%= link_to "create a group?", new_group_path %>
  <% else %>
    <%= render @groups %>
  <% end %>
</div>
