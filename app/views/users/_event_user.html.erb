<tr>
  <td><%= user.name || user.email %></td>
  <td id="user-status-<%= user.id %>">
    <% if @event.paid?(user) %>
      <%= distance_of_time_in_words_to_now @event.paid_at(user) %> ago
    <% else %>
      <span class="unpaid" id="user-unpaid-<%= user.id %>">Unpaid</span>
    <% end %>
  </td>
  <td>
    <% if @event.event_user(user).visited_event? %>
      Yes
    <% else %>
      No
    <% end %>
  <td id="payment-links-<%= user.id %>">
    <% if !@event.paid?(user) && @event.send_with_cash? %>
      <%= link_to "Mark Paid", paid_event_event_user_path(@event, @event.event_user(user)), class: "btn btn-success", method: :put, remote: true %>
    <% elsif @event.paid?(user) && @event.send_with_cash? && @event.paid_with_cash?(user) %>
      <%= link_to "Mark Unpaid", unpaid_event_event_user_path(@event, @event.event_user(user)), class: "btn btn-danger", method: :put, remote: true %>
    <% end %>
  </td>
</tr>
