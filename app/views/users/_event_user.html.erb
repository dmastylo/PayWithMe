<tr>
  <td><%= user.name || user.email %></td>
  <td>
    <% if @event.paid?(user) %>
      <%= distance_of_time_in_words_to_now @event.paid_at(user) %> ago
    <% else %>
      <span class="unpaid">Unpaid</span>
    <% end %>
  </td>
  <td>
    <% if @event.event_user(user).visited_event? %>
      Yes
    <% else %>
      No
    <% end %>
  <td>
    <% unless @event.paid?(user) || !@event.cash? %>
      <%= link_to "Mark As Paid", paid_event_event_user_path(@event, @event.event_user(user)), class: "btn btn-success", method: :put %>
    <% end %>
  </td>
</tr>